{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "description": "Stacked area chart showing Australian-born vs Overseas-born population over time.",
    "width": "container",
    "height": 300,
    "autosize": {
        "type": "fit",
        "contains": "padding"
    },
    "data": {
        "url": "data/population_change.csv"
    },
    "transform": [
        {
            "fold": [
                "Total Australian-born",
                "Total overseas-born"
            ],
            "as": [
                "Category",
                "Count"
            ]
        },
        {
            "filter": {
                "param": "legendSel"
            }
        }
    ],
    "params": [
        {
            "name": "legendSel",
            "select": {
                "type": "point",
                "fields": [
                    "Category"
                ],
                "toggle": "true"
            },
            "bind": "legend"
        }
    ],
    "mark": {
        "type": "area",
        "interpolate": "monotone"
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
                "values": [
                    "1960",
                    "1970",
                    "1980",
                    "1990",
                    "2000",
                    "2010",
                    "2020"
                ],
                "labelAngle": 0
            }
        },
        "y": {
            "field": "Count",
            "type": "quantitative",
            "title": "Population"
        },
        "color": {
            "field": "Category",
            "type": "nominal",
            "title": "Category",
            "scale": {
                "domain": [
                    "Total Australian-born",
                    "Total overseas-born"
                ],
                "range": [
                    "#4daf4a",
                    "#377eb8"
                ]
            },
            "legend": {
                "orient": "top-left"
            }
        },
        "opacity": {
            "condition": {
                "param": "legendSel",
                "value": 1
            },
            "value": 0.2
        },
        "tooltip": [
            {
                "field": "Year",
                "title": "Year"
            },
            {
                "field": "Category",
                "title": "Category"
            },
            {
                "field": "Count",
                "title": "Population",
                "format": ","
            }
        ]
    },
    "view": {
        "stroke": null
    }
}