{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Overseas Migration Growth per capita by State/Territory in Australia",
  "projection": {
    "type": "mercator",
    "scale": 600,
    "center": [135, -28]},
  "layer": [
    {
      "name": "graticule",
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "name": "australia_states",
      "data": {
        "url": "https://raw.githubusercontent.com/tonywr71/GeoJson-Data/master/australian-states.json",
        "format": {"type": "json", "property": "features"}
      },
      "transform": [
        {
          "lookup": "properties.STATE_NAME",
          "from": {
            "data": {
              "url": "data/migration_data.csv"
            },
            "key": "State",
            "fields": ["Capital city", "Natural increase", "Internal migration", "Overseas migration", "Population"]
          }
        },
        {
          "calculate": "datum['Overseas migration'] / datum.Population * 1000",
          "as": "Overseas migration per 1000"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#0c0c0c", "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "Overseas migration per 1000",
          "type": "quantitative",
          "title": ["Overseas Migration", "per 1000 people"],
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 15, 20],
            "range": ["#f7fcf5", "#c7e9c0", "#74c476", "#238b45", "#00441b"]
          },
          "legend": {"orient": "bottom-right"}
        },
        "tooltip": [
          {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
          {"field": "Capital city", "type": "nominal", "title": "Capital City"},
          {"field": "Overseas migration", "type": "quantitative", "title": "Overseas Migration (total)"},
          {"field": "Population", "type": "quantitative", "title": "Population"},
          {"field": "Overseas migration per 1000", "type": "quantitative", "title": "Per 1000 people", "format": ".1f"}
        ]
      }
    }
  ]
}