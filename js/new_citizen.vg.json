{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Bar chart with compact y-axis labels for citizenship counts.",
  "data": { "url": "data/citizenship.csv" },
  "height": 300,
  "mark": { "type": "bar", "yOffset": 5, "cornerRadiusEnd": 2, "height": { "band": 0.5 }, "color": "#1f77b4" },
  "encoding": {
    "y": {
      "field": "Country of nationality",
      "type": "nominal",
      "sort": "-x",
      "scale": { "padding": 0 },
      "axis": {
        "bandPosition": 0,
        "grid": true,
        "domain": false,
        "ticks": false,
        "labelAlign": "left",
        "labelBaseline": "middle",
        "labelPadding": -5,
        "labelOffset": -15,
        "title": "Country of Nationality",
        "titleX": 5,
        "titleY": -5,
        "titleAngle": 0,
        "titleAlign": "left"
      }
    },
    "x": {
      "field": "Number of people",
      "type": "quantitative",
      "title": "Number of People",
      "axis": { "grid": false, "format": "," }
    },
    "tooltip": [
      { "field": "Country of nationality", "title": "Country" },
      { "field": "Number of people", "title": "People", "format": "," }
    ]
  },
  "title": "Citizenship by Country of Nationality"
}
